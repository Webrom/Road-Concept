<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_directions_car"
            android:id="@+id/imageView2"
            android:layout_weight="0.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="textSimuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textSimuName"
                android:layout_weight="1"
                style="@style/TitleSimulationName"/>

            <TextView
                android:text="textDateSimu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textDateSimu"
                android:layout_weight="1" />

            <View
                android:id="@+id/viewBarSeparatorOver"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>